<section
  class="tab item-panel {{tabs.base.id}} {{tabs.base.cssClass}} {{#unless isGearType}}is-hidden{{/unless}}"
  data-tab="{{tabs.base.id}}"
  data-group="{{tabs.base.group}}"
>
  <h2>{{localize "TRISKEL.Item.Archetype.Label"}}</h2>
  <div class="form-group">
    <label for="gear-archetype-select">{{localize "TRISKEL.Item.Archetype.Label"}}</label>
    <div class="form-fields">
      <select id="gear-archetype-select" name="system.archetype">
        <option value="">{{localize "TRISKEL.Item.Archetype.None"}}</option>
        {{#each gearArchetypeOptions as |option|}}
          <option value="{{option.value}}" {{#if option.selected}}selected{{/if}}>
            {{option.label}}
          </option>
        {{/each}}
      </select>
    </div>
  </div>
  <div class="form-group">
    <label for="gear-pack-load">{{localize "TRISKEL.Item.Field.PackLoad"}}</label>
    <div class="form-fields">
      <input
        id="gear-pack-load"
        type="number"
        name="system.packLoad"
        value="{{system.packLoad}}"
        min="0"
        step="1"
      />
    </div>
  </div>
  <div class="form-group">
    <label for="gear-quantity">{{localize "TRISKEL.Item.Field.Quantity"}}</label>
    <div class="form-fields">
      <label class="checkbox">
        <input
          type="checkbox"
          name="system.quantity.stack"
          {{checked system.quantity.stack}}
        />
        {{localize "TRISKEL.Item.Field.QuantityStack"}}
      </label>
      <input
        id="gear-quantity"
        type="number"
        name="system.quantity.value"
        value="{{system.quantity.value}}"
        min="1"
        step="1"
      />
    </div>
  </div>
  <div class="form-group">
    <label for="gear-uses-value">{{localize "TRISKEL.Item.Field.Uses"}}</label>
    <div class="form-fields">
      <label class="checkbox">
        <input
          type="checkbox"
          name="system.uses.limitedUse"
          {{checked system.uses.limitedUse}}
        />
        {{localize "TRISKEL.Item.Field.LimitedUse"}}
      </label>
      <input
        id="gear-uses-value"
        type="number"
        name="system.uses.value"
        value="{{system.uses.value}}"
        min="0"
        step="1"
      />
      <span class="separator">/</span>
      <input
        id="gear-uses-max"
        type="number"
        name="system.uses.max"
        value="{{system.uses.max}}"
        min="0"
        step="1"
      />
    </div>
  </div>
  <div class="form-group">
    <label for="gear-two-handed">{{localize "TRISKEL.Item.Field.TwoHanded"}}</label>
    <div class="form-fields">
      <input
        id="gear-two-handed"
        type="checkbox"
        name="system.twoHanded"
        {{checked system.twoHanded}}
      />
    </div>
  </div>
</section>
