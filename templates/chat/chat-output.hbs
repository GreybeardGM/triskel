<section class="triskel chat-output">
  {{#if hasActor}}
    <div class="chat-output__row chat-output__actor">
      {{#if actorImage}}
        <img class="chat-output__actor-image" src="{{actorImage}}" alt="{{actorName}}">
      {{/if}}
      <div class="chat-output__actor-name">{{actorName}}</div>
    </div>
  {{/if}}

  {{#if hasHeader}}
    <div class="chat-output__row chat-output__header">
      {{#if image}}
        <img class="chat-output__image" src="{{image}}" alt="{{title}}">
      {{/if}}
      <div class="chat-output__titles">
        {{#if title}}
          <h2 class="chat-output__title">{{title}}</h2>
        {{/if}}
        {{#if subtitle}}
          <p class="chat-output__subtitle">{{subtitle}}</p>
        {{/if}}
      </div>
    </div>
  {{/if}}

  {{#if complication}}
    <div class="chat-output__row chat-output__complication complication-roll__card complication-tone {{complicationTone}}">
      {{complication}}
    </div>
  {{/if}}

  {{#if action}}
    <div class="chat-output__row chat-output__action">{{{action}}}</div>
  {{/if}}

  {{#if hasRoll}}
    <div class="chat-output__row chat-output__roll">{{{roll}}}</div>
  {{/if}}

  {{#if outcome}}
    <div class="chat-output__row chat-output__outcome">
      <div class="chat-output__difficulty">
        <span class="chat-output__difficulty-label">{{outcome.difficultyLabel}}</span>
        <span class="chat-output__difficulty-value">{{outcome.difficultyValue}}</span>
      </div>
      <div class="chat-output__outcome-pill {{outcome.tone}}">
        <span class="chat-output__outcome-label">{{outcome.label}}</span>
        {{#if outcome.value}}
          <span class="chat-output__outcome-value">{{outcome.value}}</span>
        {{/if}}
      </div>
    </div>
  {{/if}}

  {{#if footer}}
    <div class="chat-output__row chat-output__footer">{{{footer}}}</div>
  {{/if}}
</section>
