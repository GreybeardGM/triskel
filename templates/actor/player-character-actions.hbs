<section
  class="tab {{tabs.actions.id}} {{tabs.actions.cssClass}}"
  data-tab="{{tabs.actions.id}}"
  data-group="{{tabs.actions.group}}"
>
  <div class="actions-grid">
    {{#each standardActions as |action|}}
      <article
        class="action-card is-interactive {{#if action.selected}}is-selected{{/if}}"
      >
        <header class="action-card__header">
          <h3 class="action-card__title">{{action.label}}</h3>
          <button
            type="button"
            class="action-card__select is-interactive"
            data-action="selectAction"
            data-action-key="{{action.key}}"
            title="{{localize "TRISKEL.ActionControls.SelectAction"}}"
          ></button>
        </header>

        <dl class="action-card__meta">
          <div class="action-card__row" title="{{action.description}}">
            <dt>{{action.reserveLabel}}</dt>
            <dd>
              <span class="action-card__skill">{{action.skillLabel}}</span>
              <span class="action-card__bonus">{{numberFormat action.skillValue decimals=0 sign=true}}</span>
            </dd>
          </div>
        </dl>

        {{#if action.forms.length}}
          <ul class="action-card__forms">
            {{#each action.forms as |form|}}
              <li>
                <button
                  type="button"
                  class="action-card__form is-interactive {{#if form.selected}}is-selected{{/if}}"
                  data-action="toggleFormSelection"
                  data-action-key="{{action.key}}"
                  data-form-key="{{form.key}}"
                  title="{{form.description}}"
                >
                  {{form.label}}
                </button>
              </li>
            {{/each}}
          </ul>
        {{/if}}

        {{#if action.description}}
          <p class="action-card__description">{{action.description}}</p>
        {{/if}}
      </article>
    {{/each}}
  </div>
</section>
