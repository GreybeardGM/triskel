<section
  class="tab {{tabs.skills.id}} {{tabs.skills.cssClass}}"
  data-tab="{{tabs.skills.id}}"
  data-group="{{tabs.skills.group}}"
>
  {{#if resistances.length}}
    <h2>{{localize "TRISKEL.Resistances.Label"}}</h2>
    <div class="resistances-row">
      {{#each resistances as |resistance|}}
        <label class="skill-field" title="{{resistance.description}}">
          <span class="skill-label">{{resistance.label}}</span>
          <input
            type="number"
            data-dtype="Number"
            name="system.resistances.{{resistance.id}}.value"
            value="{{resistance.value}}"
          />
        </label>
      {{/each}}
    </div>
  {{/if}}

  <h2>{{localize "TRISKEL.Skills.Label"}}</h2>
  <div class="skill-grid">
    {{#each skillColumns as |column|}}
      <div class="skill-column">
        {{#each column.categories as |category|}}
          <div class="skill-category">
            <h3>{{category.title}}</h3>
            <ul>
              {{#each category.skills as |skill|}}
                <li class="skill-field" title="{{skill.description}}">
                  <span class="skill-label">{{skill.label}}</span>
                  {{#if skill.mod}}
                    <span class="skill-mod" title="{{localize "TRISKEL.Skills.ModLabel"}}">
                      {{numberFormat skill.mod decimals=0 sign=true}}
                    </span>
                  {{/if}}
                  <input
                    type="number"
                    data-dtype="Number"
                    name="system.skills.{{skill.id}}.value"
                    value="{{skill.value}}"
                  />
                </li>
              {{/each}}
            </ul>
          </div>
        {{/each}}
      </div>
    {{/each}}
  </div>
</section>
