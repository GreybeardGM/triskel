<section class="quick-roller" data-quick-roll>
  <header>
    <h2>Quick Roll</h2>
  </header>
  <div class="quick-roller-controls">
    <label class="quick-roller-modifier">
      <span>Modifier</span>
      {{numberInput
        value=0
        data=(hash quickRollModifier=true)
      }}
    </label>
    <button type="button" data-action="quickTriskelRoll">Roll Dice</button>
  </div>
</section>
