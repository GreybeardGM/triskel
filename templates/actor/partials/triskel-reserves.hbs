{{!-- systems/triskel/templates/actor/partials/triskel-reserves.hbs --}}
<svg class="triskel-svg" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">

  {{!-- Power-Arm --}}
  <g class="arm arm-power">
    {{#each ../triskel.steps as |step|}}
      <circle
        class="segment {{#if (lte step ../triskel.powerValue)}}filled{{/if}}"
        data-step="{{step}}"
        cx="{{calcPowerX step}}"
        cy="{{calcPowerY step}}"
        r="3" />
    {{/each}}
  </g>

  {{!-- Grace-Arm --}}
  <g class="arm arm-grace">
    {{#each ../triskel.steps as |step|}}
      <circle
        class="segment {{#if (lte step ../triskel.graceValue)}}filled{{/if}}"
        data-step="{{step}}"
        cx="{{calcGraceX step}}"
        cy="{{calcGraceY step}}"
        r="3" />
    {{/each}}
  </g>

  {{!-- Will-Arm --}}
  <g class="arm arm-will">
    {{#each ../triskel.steps as |step|}}
      <circle
        class="segment {{#if (lte step ../triskel.willValue)}}filled{{/if}}"
        data-step="{{step}}"
        cx="{{calcWillX step}}"
        cy="{{calcWillY step}}"
        r="3" />
    {{/each}}
  </g>

</svg>
