<section class="npc-stats">
  <h2>{{localize "TRISKEL.Actor.NPC.Stats.Title"}}</h2>
  <div class="stat-grid">
    <div class="stat-column" style="grid-area: health;">
      {{#with (lookup health "hp") as |resource|}}
        <div class="resource-bar hp">
          {{#each resource._segments as |segment|}}
            <div
              class="resource-box is-interactive segment-{{segment.state}}"
              data-action="updateResourceValue"
              data-resource="health.hp"
              data-resource-value="{{segment.index}}"
            >
              {{segment.index}}
            </div>
          {{/each}}
        </div>
        <div class="resource-input">
          <div class="resource-max">
            <label class="resource-name" for="health-hp-max" title="{{resource.description}}">{{resource.label}}</label>
            <input
              id="health-hp-max"
              class="resource-max-input"
              type="number"
              data-dtype="Number"
              name="system.health.hp.max"
              value="{{resource.max}}"
            />
          </div>
        </div>
      {{/with}}
    </div>

    <div class="stat-column" style="grid-area: wounds;">
      {{#with (lookup health "wounds") as |resource|}}
        <div class="resource-bar wounds">
          {{#each resource._segments as |segment|}}
            <div
              class="resource-box is-interactive segment-{{segment.state}}"
              data-action="updateResourceValue"
              data-resource="health.wounds"
              data-resource-value="{{segment.index}}"
            >
              {{segment.index}}
            </div>
          {{/each}}
        </div>
        <div class="resource-input">
          <div class="resource-max">
            <label class="resource-name" for="health-wounds-max" title="{{resource.description}}">{{resource.label}}</label>
            <input
              id="health-wounds-max"
              class="resource-max-input"
              type="number"
              data-dtype="Number"
              name="system.health.wounds.max"
              value="{{resource.max}}"
            />
          </div>
        </div>
      {{/with}}
    </div>
  </div>
</section>
