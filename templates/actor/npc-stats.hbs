<section class="npc-stats">
  <h2>Stat Grid</h2>
  <div class="stat-grid">
    {{#each statResources as |resource|}}
      <div class="resource-bar {{resource.key}}">
        {{#each resource._segments as |segment|}}
          <div
            class="resource-box segment-{{segment.state}}"
            {{#if segment.clickable}}
              data-action="updateResourceValue"
              data-resource="health.{{resource.key}}"
              data-resource-value="{{segment.index}}"
            {{/if}}
          >
            {{segment.index}}
          </div>
        {{/each}}
      </div>
      <article class="resource-input">
        <header>
          <h3 class="resource-name">{{resource.label}}</h3>
        </header>
        <div class="resource-max">
          <span>Maximum</span>
          <input
            type="number"
            data-dtype="Number"
            name="system.health.{{resource.key}}.max"
            value="{{resource.max}}"
          />
        </div>
      </article>
    {{/each}}
  </div>
</section>
